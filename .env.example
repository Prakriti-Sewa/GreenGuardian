# GreenGuardian Environment Variables
# Copy this file to .env and fill in your actual values

# ==========================================
# SERVER CONFIGURATION
# ==========================================

# Server Port
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Environment (development, production, test)
ENVIRONMENT=development

# ==========================================
# DATABASE CONFIGURATION
# ==========================================

# Database Type (h2, postgresql)
DB_TYPE=h2

# PostgreSQL Configuration (when DB_TYPE=postgresql)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=greenguardian
DB_USERNAME=postgres
DB_PASSWORD=YOUR_DATABASE_PASSWORD_HERE

# PostgreSQL Connection URL (alternative to individual settings)
# DATABASE_URL=jdbc:postgresql://localhost:5432/greenguardian?user=postgres&password=your_password_here

# H2 Configuration (when DB_TYPE=h2)
# H2_FILE_PATH=./build/db

# Connection Pool Settings
DB_MAX_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# ==========================================
# AUTHENTICATION & SECURITY
# ==========================================

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=YOUR_JWT_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS

# JWT Token Expiry (in milliseconds)
# Default: 604800000 (7 days)
JWT_EXPIRY=604800000

# JWT Issuer
JWT_ISSUER=greenguardian-api

# JWT Audience
JWT_AUDIENCE=greenguardian-users

# BCrypt Rounds (higher = more secure but slower)
BCRYPT_ROUNDS=12

# ==========================================
# CORS CONFIGURATION
# ==========================================

# Allowed Origins (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://127.0.0.1:3000

# Allow Credentials
CORS_ALLOW_CREDENTIALS=true

# ==========================================
# FILE UPLOAD CONFIGURATION
# ==========================================

# Max File Size (in bytes) - Default: 10MB
MAX_FILE_SIZE=10485760

# Allowed File Types (comma-separated)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,image/webp

# Upload Directory
UPLOAD_DIR=./uploads

# ==========================================
# STORAGE CONFIGURATION (S3/MinIO)
# ==========================================

# Storage Type (local, s3, minio)
STORAGE_TYPE=local

# S3/MinIO Configuration
S3_ENDPOINT=https://s3.amazonaws.com
S3_BUCKET=greenguardian-images
S3_ACCESS_KEY=YOUR_S3_ACCESS_KEY_HERE
S3_SECRET_KEY=YOUR_S3_SECRET_KEY_HERE
S3_REGION=us-east-1

# ==========================================
# EMAIL CONFIGURATION
# ==========================================

# Email Service (smtp, sendgrid, mailgun)
EMAIL_SERVICE=smtp

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=YOUR_EMAIL_HERE
SMTP_PASSWORD=YOUR_EMAIL_APP_PASSWORD_HERE
SMTP_FROM=noreply@greenguardian.com

# SendGrid
SENDGRID_API_KEY=YOUR_SENDGRID_API_KEY_HERE

# ==========================================
# API KEYS & EXTERNAL SERVICES
# ==========================================

# Google Maps API Key
GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE

# MapLibre/Mapbox Token
MAPBOX_TOKEN=YOUR_MAPBOX_ACCESS_TOKEN_HERE

# Weather API Key (optional)
WEATHER_API_KEY=YOUR_WEATHER_API_KEY_HERE

# Geocoding API Key
GEOCODING_API_KEY=YOUR_GEOCODING_API_KEY_HERE

# ==========================================
# LOGGING CONFIGURATION
# ==========================================

# Log Level (TRACE, DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Log to File
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/application.log

# ==========================================
# RATE LIMITING
# ==========================================

# Enable Rate Limiting
RATE_LIMITING_ENABLED=true

# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# ==========================================
# NOTIFICATIONS
# ==========================================

# Push Notifications Service (fcm, apns)
PUSH_SERVICE=fcm

# Firebase Cloud Messaging
FCM_SERVER_KEY=YOUR_FCM_SERVER_KEY_HERE
FCM_SENDER_ID=YOUR_FCM_SENDER_ID_HERE

# Apple Push Notification Service
APNS_KEY_ID=YOUR_APNS_KEY_ID_HERE
APNS_TEAM_ID=YOUR_APNS_TEAM_ID_HERE
APNS_BUNDLE_ID=com.greenguardian.app

# ==========================================
# ANALYTICS & MONITORING
# ==========================================

# Sentry DSN (Error Tracking)
SENTRY_DSN=YOUR_SENTRY_DSN_HERE

# Google Analytics
GA_TRACKING_ID=YOUR_GA_TRACKING_ID_HERE

# ==========================================
# FRONTEND CONFIGURATION
# ==========================================

# API Base URL
API_BASE_URL=http://localhost:8080

# WebSocket URL
WS_BASE_URL=ws://localhost:8080

# ==========================================
# ADMIN CONFIGURATION
# ==========================================

# Default Admin Credentials (CHANGE IMMEDIATELY!)
ADMIN_EMAIL=YOUR_ADMIN_EMAIL_HERE
ADMIN_PASSWORD=YOUR_ADMIN_PASSWORD_HERE

# Admin Secret Key
ADMIN_SECRET_KEY=YOUR_ADMIN_SECRET_KEY_HERE

# ==========================================
# FEATURE FLAGS
# ==========================================

# Enable Features
FEATURE_IMAGE_UPLOAD=true
FEATURE_MAP_VIEW=true
FEATURE_NOTIFICATIONS=true
FEATURE_ANALYTICS=true
FEATURE_OFFLINE_MODE=false

# ==========================================
# DEVELOPMENT/DEBUG
# ==========================================

# Debug Mode
DEBUG=false

# Hot Reload
HOT_RELOAD=true

# Mock Data
USE_MOCK_DATA=false

# Seed Database
SEED_DATABASE=false
